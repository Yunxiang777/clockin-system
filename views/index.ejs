<!DOCTYPE html>
<html lang="zh-TW">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>員工打卡系統</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <h1>🏢 員工打卡系統</h1>

    <% if (message) { %>
    <p
      style="color: <%= message.includes('❌') || message.includes('⚠️') ? 'red' : 'green' %>;"
    >
      <%= message %>
    </p>
    <% } %> <% if (!employeeId) { %>
    <form id="loginForm" method="POST" action="/login">
      <label>輸入工號：</label>
      <input
        type="text"
        name="employeeId"
        placeholder="例如：KG0588"
        required
      />
      <input type="hidden" id="lat" name="lat" />
      <input type="hidden" id="lng" name="lng" />
      <button type="submit">登入 / 綁定裝置</button>
    </form>
    <% } else { %>
    <h3>👋 歡迎，<%= employeeId %></h3>
    <form id="clockinForm" method="POST" action="/clockin">
      <input type="hidden" id="lat" name="lat" />
      <input type="hidden" id="lng" name="lng" />
      <button type="submit">打卡</button>
    </form>

    <h2>🕒 打卡紀錄</h2>
    <ul>
      <% records.forEach(r => { %>
      <li><%= new Date(r.time).toLocaleString() %>（IP：<%= r.ip %>）</li>
      <% }) %>
    </ul>
    <% } %>

    <script>
      // 抓取 GPS 位置
      function updateGPS() {
        navigator.geolocation.getCurrentPosition(
          (pos) => {
            document
              .querySelectorAll("#lat")
              .forEach((i) => (i.value = pos.coords.latitude));
            document
              .querySelectorAll("#lng")
              .forEach((i) => (i.value = pos.coords.longitude));
          },
          (err) => {
            alert("請開啟定位功能才能打卡。");
          }
        );
      }

      updateGPS();
    </script>
  </body>
</html>
